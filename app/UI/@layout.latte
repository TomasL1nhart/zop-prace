<!DOCTYPE html>
<html lang="cs">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>{block title}Museblog{/block}</title>
	<link rel="stylesheet" href="{$basePath}/style.css">
	<style>
		body {
			margin: 0;
			font-family: 'Segoe UI', sans-serif;
			background: #fafafa;
			color: #222;
		}
		header {
			display: flex;
			justify-content: space-between;
			align-items: center;
			padding: 1rem 2rem;
			background: #fff;
			box-shadow: 0 2px 5px rgba(0,0,0,0.05);
		}
		header h1 a {
			text-decoration: none;
			color: #111;
		}
		nav {
			display: flex;
			align-items: center;
			gap: 1rem;
		}
		nav a {
			text-decoration: none;
			color: #555;
			font-weight: 500;
		}
		nav a:hover {
			color: #000;
		}
		main {
			padding: 2rem;
			max-width: 900px;
			margin: 0 auto;
		}
		footer {
			text-align: center;
			padding: 1rem;
			margin-top: 4rem;
			color: #999;
			font-size: 0.9rem;
		}

		.user-avatar {
			width: 36px;
			height: 36px;
			border-radius: 50%;
			overflow: hidden;
			cursor: pointer;
		}
		.user-avatar img {
			width: 100%;
			height: 100%;
			object-fit: cover;
		}

		.user-overlay {
			position: fixed;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			background-color: rgba(0, 0, 0, 0.6);
			display: flex;
			justify-content: center;
			align-items: center;
			opacity: 0;
			pointer-events: none;
			z-index: 9999;
			transition: opacity 0.3s ease;
		}
		.user-overlay.show {
			opacity: 1;
			pointer-events: auto;
		}
		.user-panel {
			position: relative;
			background: white;
			padding: 40px;
			border-radius: 12px;
			width: 90%;
			max-width: 500px;
			max-height: 80%;
			display: flex;
			flex-direction: column;
			justify-content: space-between;
			box-shadow: 0 10px 25px rgba(0,0,0,0.3);
			transform: translateY(50px);
			opacity: 0;
			transition: transform 0.3s ease, opacity 0.3s ease;
		}
		.user-overlay.show .user-panel {
			transform: translateY(0);
			opacity: 1;
		}
		.user-info {
			text-align: center;
		}
		.close-btn {
			position: absolute;
			top: 15px;
			right: 15px;
			border: none;
			background: transparent;
			font-size: 24px;
			cursor: pointer;
		}
		.logout-form {
			display: flex;
			justify-content: flex-end;
			margin-top: 30px;
		}
		.logout-btn {
			padding: 12px 24px;
			background-color: #e74c3c;
			color: white;
			border: none;
			border-radius: 6px;
			cursor: pointer;
			font-size: 16px;
		}
		.logout-btn:hover {
			background-color: #c0392b;
		}
	</style>
</head>
<body>
	<header>
		<h1><a href="{link Home:default}">Museblog</a></h1>
		<nav>
			<a href="{link Home:default}">Home</a>
			{if $user->isLoggedIn()}
				<a href="{link Post:create}">New Post</a>
				<div class="user-avatar" id="userAvatar">
					<img src="{$basePath}/images/default-avatar.png" alt="Profil">
				</div>
			{else}
				<a href="{link Sign:in}">Sign In</a>
				<a href="{link Register:register}">Register</a>
			{/if}
		</nav>
	</header>

	{if $user->isLoggedIn()}
		<div id="userOverlay" class="user-overlay">
			<div class="user-panel">
				<button id="closePanel" class="close-btn">✖</button>
				<div class="user-info">
					<h2>{$user->identity->username}</h2>
					<p>Účet vytvořen:
						{ifset $user->identity->created_at}
							{$user->identity->created_at|date:'d.m.Y'}
						{else}
							Neznámé
						{/ifset}
					</p>
					<p>Poslední přihlášení:
						{ifset $user->identity->last_login}
							{$user->identity->last_login|date:'d.m.Y H:i'}
						{else}
							Nikdy
						{/ifset}
					</p>
				</div>
				<form action="{link Sign:out}" method="post" class="logout-form">
					<button type="submit" class="logout-btn">Odhlásit se</button>
				</form>
			</div>
		</div>
	{/if}

	<main>
		{include #content}
	</main>

	<footer>
		<p>&copy; {=date('Y')} Museblog</p>
	</footer>

	{if $user->isLoggedIn()}
	<script>
		const avatar = document.getElementById('userAvatar');
		const overlay = document.getElementById('userOverlay');
		const closeBtn = document.getElementById('closePanel');

		avatar.addEventListener('click', () => {
			overlay.classList.add('show');
		});
		closeBtn.addEventListener('click', () => {
			overlay.classList.remove('show');
		});
		overlay.addEventListener('click', (e) => {
			if (e.target === overlay) {
				overlay.classList.remove('show');
			}
		});
		document.addEventListener('keydown', (e) => {
			if (e.key === 'Escape') {
				overlay.classList.remove('show');
			}
		});
	</script>
	{/if}
</body>
</html>
