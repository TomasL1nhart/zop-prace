<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">
	<link rel="stylesheet" href="{$basePath}/style.css">

	<title>{ifset title}{include title|stripHtml} | {/ifset}Nette Web</title>
</head>

<body>
	<div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>

	{include content}

	<ul class="navig">
		<li><a n:href="Home:">Články</a></li>
		<li><a n:href="Game:">Hry</a></li>
		{if $user->isLoggedIn()}
			<li><a n:href="Sign:out">Odhlásit</a></li>
		{else}
			<li><a n:href="Sign:in">Přihlásit</a></li>
		{/if}
	</ul>

	<script src="https://unpkg.com/naja@3/dist/Naja.min.js"></script>
	<script> naja.initialize(); </script>
</body>
</html>
