{block content}
<link rel="stylesheet" href="{$basePath}/style.css">
<h1>Games in genre: {$genre->name}</h1>

<h4>Genres: 
    {foreach $genres as $g}
        <a n:href="Game:genre, $g->id">{$g->name}</a>{sep} - {/sep}
    {/foreach}
</h4>

{if count($games)}
    <ul>
        {foreach $games as $game}
            <li><a n:href="Game:show, $game->id">{$game->name}</a></li>
        {/foreach}
    </ul>
{else}
    <p>No games found in this genre.</p>
{/if}
{/block}
